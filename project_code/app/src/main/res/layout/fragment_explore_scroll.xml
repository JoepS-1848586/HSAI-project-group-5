<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cat name"
            android:id="@+id/explore_scroll_cat"
            android:background="@color/colorCategorie"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="0dp"
            ></TextView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/explore_scroll_cat"
            android:background="@color/colorCategorie"
            android:id="@+id/explore_scroll_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <fragment
                        android:id="@+id/explore_scroll_product"
                        android:name="com.example.hsai_project.fragments.ProductViewFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"></fragment>
                    <fragment
                        android:id="@+id/explore_scroll_product2"
                        android:name="com.example.hsai_project.fragments.ProductViewFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"></fragment>
                    <fragment
                        android:id="@+id/explore_scroll_product3"
                        android:name="com.example.hsai_project.fragments.ProductViewFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"></fragment>
                    <fragment
                        android:id="@+id/explore_scroll_product4"
                        android:name="com.example.hsai_project.fragments.ProductViewFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"></fragment>
                    <fragment
                        android:id="@+id/explore_scroll_product5"
                        android:name="com.example.hsai_project.fragments.ProductViewFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"></fragment>

                </LinearLayout>
            </RelativeLayout>
        </HorizontalScrollView>

        <ImageView
            android:layout_width="43dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_navigate_before_black_24dp"
            android:id="@+id/explore_scroll_left"/>

        <ImageView
            android:layout_width="43dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/explore_scroll_right"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>